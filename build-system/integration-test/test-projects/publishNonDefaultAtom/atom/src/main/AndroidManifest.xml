<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:instant="http://schemas.android.com/instantapps"
    package="com.android.tests.publishatom"
    split="atom">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:label="@string/app_name">

        <activity
                android:name="com.android.tests.publishatom.atom.MainActivity"
                android:label="@string/app_name">

            <intent-filter instant:order="1">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                        android:host="tests.android.com"
                        android:scheme="https"
                        android:pathPattern="/path/.*" />
                <data
                        android:host="tests.android.com"
                        android:scheme="http"
                        android:pathPattern="/path/.*" />
            </intent-filter>
        </activity>
    </application>
</manifest>
