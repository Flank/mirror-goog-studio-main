    name = "kotlin_tests",
    srcs = ["src/test/java"],
    inputs = glob(["src/test/java/**/*.kt"]),
    deps = TEST_DEPS,
)

coverage_java_test(
    name = "tests",
    timeout = "eternal",
    data = TEST_DATA,
    jvm_flags = [
        "-Dtest.suite.jar=tests.jar",
        "-Dfile.encoding=UTF-8",
        "-Dsun.jnu.encoding=UTF-8",
        "-Dmaven.repo.local=/tmp/localMavenRepo",  # For gradle publishing, writing to ~/.m2
